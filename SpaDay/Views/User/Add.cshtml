<h1>Add User</h1>

<form method="post">
    <div class="form-group">
        @if(ViewBag.error != null)
        {
            <label class="alert-danger">@ViewBag.error</label><br />
        }

        <label for="username">Username: </label>
        <input name="username" value="@ViewBag.name" type="text" class="form-control" /><br />
        <label for="email">Email Id: </label>
        <input name="email" value="@ViewBag.email" type="email" class="form-control" /><br />
        <label for="password">Password: </label>
        <input name="password" type="password" class="form-control" /><br />
        <label for="verify">Retype Password: </label>
        <input name="verify" type="password" class="form-control" /><br />
        <input type="submit" value="Add User" />
    </div>
</form>